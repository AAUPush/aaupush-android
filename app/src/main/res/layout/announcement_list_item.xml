<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lecturer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seble Wengel"
            android:layout_gravity="start"
            />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/is_urgent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/urgent_tag_background"
            android:padding="4dp"
            android:text="URGENT"
            android:textColor="#fff"
            android:gravity="end"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/announcement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/announcement_example"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/show_full_post_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_full_post"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:textColor="@color/colorPrimaryDark"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/posted_on"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="June 20, 2017 @ 12:30 AM"
            />

    </LinearLayout>



</LinearLayout>